generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // bcrypt hashed
  role      Role
  status    UserStatus @default(ACTIVE)
  doctor    Doctor?
  auditLogs      UserAuditLog[] @relation("UserAuditLogUser")
  actorAuditLogs UserAuditLog[] @relation("UserAuditLogActor")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  RECEPTION
  DOCTOR
  NURSE
  DISPLAY
}

enum UserStatus {
  ACTIVE
  LOCKED
  DISABLED
}

model Patient {
  id        String   @id @default(uuid())
  patientId String   @unique // P-YYYYMMDD-XXXX
  name      String
  age       Int
  gender    Gender
  phone     String
  address   String?
  visits    Visit[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
  @@index([name])
  @@index([phone])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Doctor {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])
  name            String
  specialization  String
  consultationFee Float
  roomNumber      String
  visits          Visit[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Room {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  floor     String?
  status    RoomStatus @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}

enum RoomStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
}

model Procedure {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String
  department  String?
  defaultFee  Float
  hourlyRate  Float?
  orders      ProcedureOrder[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([code])
  @@index([department])
}

model Visit {
  id              String       @id @default(uuid())
  patientId       String
  patient         Patient      @relation(fields: [patientId], references: [id])
  doctorId        String
  doctor          Doctor       @relation(fields: [doctorId], references: [id])
  tokenNumber     Int
  visitDate       DateTime     @default(now())
  status          VisitStatus  @default(WAITING)
  isEmergency     Boolean      @default(false)
  consultationFee Float
  prescription    Prescription?
  payment         Payment?
  invoice         Invoice?
  procedureOrders ProcedureOrder[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  completedAt     DateTime?

  @@index([doctorId, visitDate])
  @@index([status])
}

enum VisitStatus {
  WAITING
  IN_CONSULTATION
  COMPLETED
  CANCELLED
}

model Prescription {
  id            String                  @id @default(uuid())
  visitId       String                  @unique
  visit         Visit                   @relation(fields: [visitId], references: [id])
  diagnosis     String?
  clinicalNotes String?
  medicines     PrescriptionMedicine[]
  createdAt     DateTime                @default(now())
}

model PrescriptionMedicine {
  id             String       @id @default(uuid())
  prescriptionId String
  prescription   Prescription @relation(fields: [prescriptionId], references: [id])
  medicineName   String
  dosage         String
  frequency      String
  duration       String
  instructions   String?
}

model Payment {
  id          String      @id @default(uuid())
  visitId     String      @unique
  visit       Visit       @relation(fields: [visitId], references: [id])
  amount      Float
  paymentType PaymentType
  createdAt   DateTime    @default(now())
}

enum PaymentType {
  CONSULTATION
  EMERGENCY
}

// New billing system (full invoices, items, partial payments, receipts).
model Invoice {
  id        String        @id @default(uuid())
  visitId   String        @unique
  visit     Visit         @relation(fields: [visitId], references: [id])
  status    InvoiceStatus @default(DRAFT)

  items     InvoiceItem[]
  payments  PaymentTransaction[]
  receipt   Receipt?

  // Totals are persisted for quick reads; computed/validated in service layer.
  subtotal  Float         @default(0)
  discount  Float         @default(0)
  tax       Float         @default(0)
  total     Float         @default(0)
  paidTotal Float         @default(0)
  balanceDue Float        @default(0)

  issuedAt  DateTime?
  voidedAt  DateTime?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([status])
  @@index([createdAt])
}

model InvoiceItem {
  id          String             @id @default(uuid())
  invoiceId   String
  invoice     Invoice            @relation(fields: [invoiceId], references: [id])

  description String
  category    InvoiceItemCategory
  quantity    Int                @default(1)
  unitPrice   Float
  lineTotal   Float

  createdAt   DateTime           @default(now())

  @@index([invoiceId])
}

model PaymentTransaction {
  id        String        @id @default(uuid())
  invoiceId String
  invoice   Invoice       @relation(fields: [invoiceId], references: [id])

  amount    Float
  method    PaymentMethod
  reference String?
  createdAt DateTime      @default(now())

  @@index([invoiceId])
  @@index([createdAt])
}

model Receipt {
  id            String   @id @default(uuid())
  invoiceId     String   @unique
  invoice       Invoice  @relation(fields: [invoiceId], references: [id])
  receiptNumber String   @unique
  snapshot      Json
  createdAt     DateTime @default(now())
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  PARTIALLY_PAID
  PAID
  VOID
}

enum InvoiceItemCategory {
  CONSULTATION
  EMERGENCY
  LAB
  IMAGING
  MEDICINE
  PROCEDURE
  OTHER
}

enum PaymentMethod {
  CASH
  CARD
  BANK_TRANSFER
  MOBILE_WALLET
  OTHER
}

model UserAuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation("UserAuditLogUser", fields: [userId], references: [id])
  actorId   String?
  actor     User?    @relation("UserAuditLogActor", fields: [actorId], references: [id])
  action    String
  details   Json?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([actorId])
  @@index([createdAt])
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model ProcedureOrder {
  id          String            @id @default(uuid())
  visitId     String
  visit       Visit             @relation(fields: [visitId], references: [id])
  procedureId String
  procedure   Procedure         @relation(fields: [procedureId], references: [id])
  notes       String?
  status      ProcedureStatus   @default(REQUESTED)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime          @default(now())

  @@index([visitId])
  @@index([procedureId])
  @@index([status])
}

enum ProcedureStatus {
  REQUESTED
  IN_PROGRESS
  COMPLETED
}


